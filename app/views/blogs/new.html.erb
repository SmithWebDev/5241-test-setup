<h3 class="text-center">Add New Blog Entry</h3>

<div class="blog-form">
  <%= form_for @blog do |f| %>
    <p>
      <%= f.label :title %> <br>
      <%= f.text_field :title, placeholder: "Title of Blog Entry", autofocus: true %>
    </p>
    <p>
      <%= f.label :body %> <br>
      <%= f.text_area :body, placeholder: "Body of Blog Entry" %>
    </p>
    <%= f.submit "Create Entry" %>
  <% end %>
</div>

